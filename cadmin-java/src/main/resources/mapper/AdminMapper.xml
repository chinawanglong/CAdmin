<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cadmin.cadmin.mapper.AdminMapper">
    <select id="getByUsername" resultType="com.cadmin.cadmin.entity.Admin">
        SELECT * FROM cadmin.c_admin where username = #{username}
    </select>

    <select id="getRoleByUsername" resultType="String">
        select r.name
        from cadmin.c_role r
        where r.id in (
            select ar.id from cadmin.c_admin a, cadmin.c_admin_role ar
            where a.id = r.admin_id and a.username = #{username}
        )
    </select>
</mapper>