<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cadmin.cadmin.mapper.MenuMapper">
    <select id="getMenuList" resultType="com.cadmin.cadmin.entity.Menu">
        SELECT * FROM cadmin.c_menu where is_show = #{isShow}
    </select>

    <select id="selectPageMenu" resultType="com.cadmin.cadmin.entity.Menu">
        select * from cadmin.c_menu
        <where>
            <if test="menu.title != null and menu.title != ''">
                and title like concat("%",#{menu.title}, "%")
            </if>
        </where>
        order by sort
    </select>
</mapper>